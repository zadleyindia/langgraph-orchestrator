# Personal AI Brain - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# CORE API KEYS
# =============================================================================

# OpenAI API Key (required for LLM and embeddings)
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Supabase Configuration (for Knowledge Graph MCP Server)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Direct PostgreSQL Connection (alternative to Supabase)
DATABASE_URL=postgresql://postgres:password@localhost:5432/knowledge_graph
DATABASE_PASSWORD=your-database-password
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=knowledge_graph
DATABASE_USER=postgres

# =============================================================================
# MEMORY MCP CONFIGURATION
# =============================================================================

# OpenAI Embedding Model
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Memory Limits (adjust based on your needs)
MAX_OBSERVATIONS_PER_ENTITY=1000
MAX_SEARCH_RESULTS=50

# SSL Configuration
REQUIRE_SSL=false

# =============================================================================
# DEVELOPMENT TOOLS (optional)
# =============================================================================

# pgAdmin Configuration (for database management)
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin

# Grafana Configuration (for monitoring)
GRAFANA_PASSWORD=admin

# =============================================================================
# SECURITY (production)
# =============================================================================

# JWT Secret (for future authentication)
JWT_SECRET=your-super-secret-jwt-key

# API Rate Limiting
API_RATE_LIMIT=100

# =============================================================================
# FUTURE MCP SERVICES (for expansion)
# =============================================================================

# WhatsApp MCP
WHATSAPP_USERNAME=your-whatsapp-username
WHATSAPP_PASSWORD=your-whatsapp-password

# GitHub MCP
GITHUB_TOKEN=ghp_your-github-token

# Google Services
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# AWS Services
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1

# Slack Integration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret